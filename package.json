{
  "name": "backend-incendios",
  "version": "1.0.0",
  "description": "Backend base para sistema de monitoreo y alerta de incendios",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "typeorm": "tsx node_modules/typeorm/cli.js -d src/db/data-source.ts",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "typeorm:dist": "node node_modules/typeorm/cli.js -d dist/db/data-source.js",
    "migration:run:dist": "npm run typeorm:dist -- migration:run",
    "migration:revert:dist": "npm run typeorm:dist -- migration:revert",
    "seed": "ts-node src/db/seeds/171004_seed_inicial.ts",
    "lint": "echo 'lint placeholder'",
    "format": "echo 'format placeholder'"
  },
  "dependencies": {
    "@types/helmet": "^0.0.48",
    "@types/ioredis": "^4.28.10",
    "@types/pino": "^7.0.4",
    "@types/pino-http": "^5.8.4",
    "argon2": "^0.44.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.0",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "cross-env": "^10.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typeorm": "^0.3.27",
    "typescript": "^5.9.3"
  }
}
